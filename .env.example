# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Which LLM to use: "google" (default), "azure", or "openai"
LLM_PROVIDER=google

# Google Gemini API Key
# Get yours at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Azure OpenAI (set LLM_PROVIDER=azure to use)
# AZURE_OPENAI_API_KEY=your_azure_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-12-01-preview

# OpenAI (set LLM_PROVIDER=openai to use)
# OPENAI_API_KEY=your_openai_key_here
# OPENAI_MODEL=gpt-4o

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Path to the document index database (SQLite)
DOC_INDEX_DB=.cache/doc_index.db

# =============================================================================
# Cache Configuration (for FastAPI server)
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=86400
L1_MAX_ENTRIES=100
L1_MAX_SIZE_MB=200
L2_MAX_ENTRIES=10000
L2_MAX_SIZE_MB=1024
L3_ENABLED=true
L3_SIMILARITY_THRESHOLD=0.85
CACHE_DB_PATH=.cache/cache.db

# Session Configuration
SESSION_CLEANUP_DAYS=30
